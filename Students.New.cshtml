@model StudentRegistrationApplication.ViewModels.NewStudentViewModel
@{
    /**/

    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Student</h2>
@using (Html.BeginForm("Create", "Students"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Student.Name)
        @Html.TextBoxFor(m => m.Student.Name, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.IndexNo)
        @Html.TextBoxFor(m => m.Student.IndexNo, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.RegisterDate)
        @Html.TextBoxFor(m => m.Student.RegisterDate, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Student.AcademicType)
        @Html.DropDownListFor(m => m.Student.AcademicTypeId,new SelectList(Model.AcademicTypes,"Id","DegreeName"),"Select Degree Name", new { @class = "form-control" })
    </div>

}

